#:kivy 1.11.1
# Descrição da interface gráfica
<MyWidget>:
    orientation: 'vertical' # Alterando o atributo orientation, ordenar os widgets na horizontal, padrão é horizontal
    Label:
        id: lb
        text: '0'
        size_hint:(1.0, 0.25)   
        pos_hint: {'right': 1}
    GridLayout:
        id: grid
        size_hint: 1, 0.75
        cols: 4
        rows: 4
        Button:
            id: sete
            text:'7' 
            on_press: root.armazena(self.text)
        Button:
            id: oito
            text:'8' 
            on_press: root.armazena(self.text)
        Button:
            id: nove
            text:'9' 
            on_press: root.armazena(self.text)
        Button:
            id: soma
            text:'+' 
            on_press: root.armazena(self.text)
        Button:
            id: quatro
            text:'4' 
            on_press: root.armazena(self.text)
        Button:
            id: cinco
            text:'5' 
            on_press: root.armazena(self.text)
        Button:
            id: seis
            text:'6' 
            on_press: root.armazena(self.text)
        Button:
            id: sub
            text:'-' 
            on_press: root.armazena(self.text)
        Button:
            id: um
            text:'1' 
            on_press: root.armazena(self.text)
        Button:
            id: dois
            text:'2' 
            on_press: root.armazena(self.text)
        Button:
            id: tres
            text:'3' 
            on_press: root.armazena(self.text)
        Button:
            id: mult
            text:'*' 
            on_press: root.armazena(self.text)
        Button:
            id: c
            text:'C' 
            on_press: root.armazena(self.text)
        Button:
            id: zero
            text:'0' 
            on_press: root.armazena(self.text)
        Button:
            id: del
            text:'DEL' 
            on_press: root.armazena(self.text)
        Button:
            id: div
            text:'/' 
            on_press: root.armazena(self.text)
    BoxLayout:
        orientation: 'horizontal'
        size_hint: (1, 0.15)
        Button:
            id: igual
            text: '='
            size_hint:(0.75,1)   
            on_press: root.armazena(self.text)
        Button:
            id: ponto
            text: '.'
            size_hint:(0.25,1)   
            on_press: root.armazena(self.text)
# app -> se refere ao opjeto app da aplicação
# self -> se refere ao próprio objeto
# root -> objeto raiz do kv



